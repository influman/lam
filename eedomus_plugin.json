{
	"plugin_id": "lam",
	"name_fr": "Light AlarM",
	"icon": "lam.png",
	"version": "1.5",
	"creation_date": "2019-03-15",
	"modification_date": "2019-04-03",
	"author": "Influman",
	"description_fr": "Contrôlez le Light AlarM (LAM/SLAM) de <a target='_blank' href='https://www.madomotic.fr/'>MaDomotic</a> via son API",
	"description_en": "",
	"description_es": "",
	"description_it": "",
	"description_de": "",
	"forum_link": "https://forum.eedomus.com/viewtopic.php?t=8227",
	"parameters":
  [
	{
			"parameter": "NUM", 
			"description": "(S)LAM n°",
			"xtype": "textfield",
			"default_value": "1",
			"field": "width:50, allowBlank:true"
    },
	{
			"parameter": "IP", 
			"description": "Adresse IP locale du (S)LAM",
			"xtype": "textfield",
			"default_value": "192.168.",
			"field": "width:130, allowBlank:false, maskRe:/[0-9.]/, regex:/^(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[1-9])\\.(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[1-9]|0)\\.(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[1-9]|0)\\.(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[0-9])$/, regexText:'Adresse IP invalide [0-255].[0-255].[0-255].[0-255]'"
    },
	{
			"parameter": "VERSION",
			"description": "Version",
			"xtype": "combo",
			"field": "width:150, allowBlank:false, store:[['LAM', 'LAM 7 LEDS'], ['SLAM', 'SLAM 12 LEDS']], triggerAction: 'all'"
	},
	{
			"parameter": "TYPE",
			"description": "Type SLAM",
			"xtype": "combo",
			"field": "width:150, allowBlank:false, store:[['0', '--'], ['1', 'SWITCH']], triggerAction: 'all'"
	},
	{
			"parameter": "line2",
			"description": "Pour le contrôle du SLAM Switch :",
			"xtype": "displayfield",
			"field": "style: 'padding: 3px;', value: ' '"
			},
			{
			"parameter": "IPEED", 
			"description": "Adresse IP locale de la box eedomus",
			"xtype": "textfield",
			"default_value": "192.168.",
			"field": "width:130, allowBlank:false, maskRe:/[0-9.]/, regex:/^(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[1-9])\\.(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[1-9]|0)\\.(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[1-9]|0)\\.(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[0-9])$/, regexText:'Adresse IP invalide [0-255].[0-255].[0-255].[0-255]'"
    },
	{
            "parameter": "APIU", 
            "description": "Code API User : ",
            "xtype": "textfield",
			"default_value": "",
			"field": "width:150, allowBlank:false"
	},
	{
			"parameter": "APIS", 
            "description": "Code API Secret : ",
            "xtype": "textfield",
			"default_value": "",
			"field": "width:150, allowBlank:false"
	}
  ],
